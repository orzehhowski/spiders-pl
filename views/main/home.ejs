<%- include('../includes/head.ejs') %>
<%- include('../includes/nav.ejs') %>
<div class="container spiders-list">
  <h1 class="mt-3"><%= header %></h1>
  <hr>
  <div class="row row-cols-auto">
    <% for (family of families) { %>
    <div class="col">
      <a class="spider-card-link text-dark" href="/family/<%= family.id %>">
        <div class="card spider-card my-2" id="f-<%= family.id %>">
          <img src="<%= family.image %>" class="card-img-top" alt="..." >
          <div class="card-body">
            <h5 class="card-title"><%= family.name %></h5>
            <p class="card-text italic"><%= family.latinName %></p>
          </div>
        </div>
      </a>
    </div>
    <% } %>
  </div>
</div>
<%- include('../includes/end.ejs') %>